<h1>Sporteam</h1>
<p>Find people to moove your body</p>

<%= form_tag(events_path, method: :get) do %>
  <% Category.all.each do |category| %>
    <%= check_box_tag 'categories[]', category.id %>
    <%= label_tag "category_#{category.id}", category.sport %>
    <br>
  <% end %>
<button type="button" class="btn btn-light">My favsğŸ©·</button>
<% end %>

<div data-controller="switch">

  <div class="container text-center">
    <div class="btn-group" data-switch-target="" >
      <button data-action="click->switch#handleClick" data-switch-toggableTarget-param="list" >
        LIST ğŸ“‹
      </button>
      <button data-action="click->switch#handleClick" data-switch-toggableTarget-param="map" >
        MAP ğŸŒ
      </button>
    </div>
  </div>


  <h1>Events</h1>
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']%>"
    data-switch-target="map"
  > </div>


  <div  data-switch-target="cards">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Category</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Participations</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.description %></td>
            <td><%= event.category.name %></td>
            <td><%= event.start_at %></td>
            <td><%= event.end_at %></td>
            <td><%= link_to 'Show', event %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
