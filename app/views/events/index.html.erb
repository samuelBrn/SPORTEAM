
<div data-controller="myfavs">
<%= form_tag(events_path, method: :get) do %>
<button class="btn btn-light" data-action="click->myfavs#toggle">
  My favs🖤
</button>
  <div data-myfavs-target="categories" class="d-none">
    <% Category.all.each do |category| %>
      <div class="form-check form-switch">
        <%= check_box_tag "categories[]", category.id, @user_categories_ids.present? && @user_categories_ids.include?(category.id), class: 'form-check-input', id: "category_#{category.id}" %>
        <%= label_tag "category_#{category.id}", category.sport, class: 'form-check-label' %>
      </div>
    <% end %>
  </div>
  <%= submit_tag 'Filter', class: 'btn btn-light', style: 'display: none;' %>
<% end %>
</div>

<div data-controller="switch">

    <div class="container mt-3 text-center">
  <div class="btn-group" role="group" aria-label="List map toggle">
    <button data-action="click->switch#handleClick" data-switch-toggableTarget-param="list" class="btn btn-toggle active">
      MAP 📋
    </button>
    <button data-action="click->switch#handleClick" data-switch-toggableTarget-param="map" class="btn btn-toggle">
      LIST 🌍
    </button>
  </div>
</div>

<div data-switch-target="map" class="container">
<div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
    data-switch-target="map">
  </div>

<div data-switch-target="cards" class="d-none row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
  <% @events.each do |event| %>
    <div class="col-md-4 mb-4">
      <div class="d-flex flex-column">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= event.name %></h5>
          <div class="d-flex justify-content-between align-items-center">
            <p class="card-text"><%= event.category.sport %></p>
            <div>
              <% if event.user.avatar.attached? %>
                <%= cl_image_tag event.user.avatar.key, width: 45, height: 45, crop: :fill  %>
              <% else %>
                <%= image_tag 'avatar.png', width: 45, height: 45 %>
              <% end %>
            </div>
          </div>
          <p class="card-text"><%= event.start_at %></p>
          <p class="card-text"><strong>Participants:</strong> <%= event.current_participants_count %> / <%= event.max_player %></p>
          <%= link_to 'Details', event, class: 'btn btn-primary mr-2' %>
        </div>
      </div>
    </div>
    </div>
  <% end %>
  </div>
</div>
</div>
